extends layout

block content
    h1 This is Nuggets. page
    p Welcome to Pug #{title}
    - let items = results 
     div(class = "container-fluid")
      div(class = "row" )
        each item,index in items
            div(class="col-sm-2" onclick=`buy (${index})`) Name: #{item.name}
            div(class="col-sm-2" onclick=`buy (${index})`) Size: #{item.size}
            div(class="col-sm-2" onclick=`buy (${index})`) Price: $#{item.price}
            - let destination = `dispatch(\"/searchresults/update?id=${item._id}\")`
            button.btn( class="btn-primary ml-1", onclick= destination) Update
    script.
      function buy(itemNum){
        
        alert(`you purchased item ${itemNum+1}`)

     }
     function dispatch(path){
        window.location.href=path
     }


       
        