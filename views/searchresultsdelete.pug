extends layout

block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let id = toShow._id
    - let name = toShow.name
    - let size = toShow.size
    - let price = toShow.price
    - let actionid = "/resource/searchresults/" + id

    script.
      let actionid = "#{actionid}"

    div
      div.row
        div(class='searchresultsAttr mr-3') NuggetsID is:
        div #{id}
      div.row
        div(class='searchresultsAttr mr-3') Nuggets name is:
        div #{name}
      div.row
        div(class='searchresultsAttr mr-3') Nuggetssize is:
        div #{size}
      div.row
        div(class='searchresultsAttr mr-3') Nuggetsprice is:
        div #{price}

    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel

    script.
      function cancel() {
        // Go back to the home page for the Nuggets collection
        window.location.href='/searchresults'
      }

    script.
      function deleteOnid() {
        console.log("starting delete")
        // delete first
        fetch(actionid, {
          method: 'DELETE'  //Don't need a body for the delete
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeeded")
          window.location.href='/searchresults'
          // TODO handle body
        }).catch((error) => {
          // TODO handle error
          alert("Delete failed " + error )
        });
      }