extends layout

block content
  h1= title
  - let _id = toShow._id
  - let name = toShow.name
  - let size = toShow.size
  - let price = toShow.price

  div
    div.row
      div(class='searchresultsAttr mr-3') Nuggets ID is:#{_id}

    div.row
      div(class='searchresultsAttr mr-3') Nuggets Type is:#{name}

    div.row
      div(class='searchresultsAttr mr-3') Nuggets Size is: #{size}

    div.row
      div(class='searchresultsAttr mr-3') Nuggets Cost is: #{price}

